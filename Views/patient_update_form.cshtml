@{
  Layout = "Shared/_Layout.cshtml";
}

<h2>Edit profile</h2>
<form action="/patients/@Model.Id/update" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <div class="form-group">
    <label>Username</label>
    <input class="form-control" type="text" name="username" value="@Model.UserName" required>
  </div>
  <div class="form-group">
    <label>Password</label>
    <input class="form-control" type="text" name="password" value="@Model.Password" required>
  </div>
  <div class="form-group">
    <label>Full Name</label>
    <input class="form-control" type="text" name="name" value="@Model.Name" required>
  </div>
  <button class="btn btn-info" type="submit" name="button">Edit profile</button>
</form>
