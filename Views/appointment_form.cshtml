@{
  Layout = "Shared/_Layout.cshtml";
}

<h2 class="text-center">Add an appointment</h2>
<form action='/patients/@Model["patient-id"]/appointments/added' method="post">
  <div class="form-group">
    <label>Date:</label>
    <input type="date" name="date" class="form-control" required>
  </div>
  <div class="form-group">
    <label>Doctor:</label>
    <select name="doctor" class="form-control" required>
      @foreach(var doctor in Model["patient-doctors"])
      {
        <option value="@doctor.Id">@doctor.Name</option>
      }
    </select>
  </div>
  <div class="form-group">
    <label>Brief description of what you're being seen for:</label>
    <input type="text" name="description" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-info">Create appointment</button>
</form>
